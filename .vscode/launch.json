{
    "version": "0.2.0",
    "configurations": [
        
        {
            "command": "npm test",
            "name": "Run npm test",
            "request": "launch",
            "type": "node-terminal",
            "cd"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon server",
            "runtimeExecutable": "${workspaceFolder}/server/node_modules/nodemon/bin/nodemon.js",
            "program": "${workspaceFolder}/server/dist/app.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon client",
            "runtimeExecutable": "${workspaceFolder}/client/node_modules/nodemon/bin/nodemon.js",
            "program": "${workspaceFolder}/client/dist/app.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}